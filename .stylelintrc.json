{
    "rules": {
        "indentation": 2,
        "max-line-length": 120,
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": [
                    "hover",
                    "focus"
                ]
            }
        ],
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": [
                    "-webkit-appearance"
                ]
            }
        ]
    }
}